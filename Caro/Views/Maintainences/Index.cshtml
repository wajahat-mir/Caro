@model IEnumerable<Caro.Models.MaintainenceViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewData["carId"] })|@Html.ActionLink("Return to Cars", "Index", "Cars")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dateMaintained)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mileageMaintained)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.service)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dateMaintained)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mileageMaintained)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.service)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.MaintainenceId })
            </td>
        </tr>
    }
    
</table>
